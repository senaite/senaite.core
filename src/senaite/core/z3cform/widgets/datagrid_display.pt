<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag="" >

  <div>
    <table class="datagridwidget-table-view"
           tal:condition="view/widgets"
           tal:attributes="class string:table table-sm table-striped table-responsive ${view/display_table_css_class};
                           id view/id_prefix;" >
      <thead class="">
        <tr>
          <tal:block repeat="column view/columns">
            <th class="header"
                tal:condition="python:column['mode'] != 'hidden'">
              <span tal:content="column/label"
                    i18n:translate="">
                title
              </span>
              <span class="required"
                    title="Required"
                    tal:condition="column/required"
                    i18n:attributes="title title_required"
                    i18n:domain="plone">
                &nbsp;
              </span>
            </th>
          </tal:block>
        </tr>
      </thead>
      <tbody id="datagridwidget-tbody"
             tal:attributes="data-name_prefix view/name_prefix;
                 data-id_prefix view/id_prefix;">
        <tal:block repeat="widget view/widgets">
          <tr tal:condition="python:widget.mode != 'hidden' and not widget.name.endswith('AA') and not widget.name.endswith('TT')"
              tal:attributes="class widget/klass;">
            <metal:block define-macro="widget-row">
              <div tal:replace="structure widget/render"></div>
            </metal:block>
          </tr>
        </tal:block>
      </tbody>
    </table>
    <input type="hidden"
           tal:replace="structure view/counterMarker"/>
  </div>
</html>
