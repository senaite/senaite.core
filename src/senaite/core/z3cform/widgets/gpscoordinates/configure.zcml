<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:z3c="http://namespaces.zope.org/z3c">

  <!-- Coordinate Widget -->
  <adapter
      factory=".widget.GPSCoordinatesWidgetFactory"
      for="senaite.core.schema.interfaces.IGPSCoordinatesField
           senaite.core.interfaces.ISenaiteFormLayer" />

  <!-- Coordinate data converter -->
  <adapter factory=".widget.GPSCoordinatesDataConverter" />

  <!-- Coordinate input widget template -->
  <z3c:widgetTemplate
      mode="input"
      widget=".widget.GPSCoordinatesWidget"
      template="input.pt"
      layer="senaite.core.interfaces.ISenaiteFormLayer" />

  <!-- Coordinate display widget template -->
  <z3c:widgetTemplate
      mode="display"
      widget=".widget.GPSCoordinatesWidget"
      template="display.pt"
      layer="senaite.core.interfaces.ISenaiteFormLayer" />

  <!-- Coordinate hidden widget template -->
  <z3c:widgetTemplate
      mode="hidden"
      widget=".widget.GPSCoordinatesWidget"
      template="hidden.pt"
      layer="senaite.core.interfaces.ISenaiteFormLayer" />

</configure>
