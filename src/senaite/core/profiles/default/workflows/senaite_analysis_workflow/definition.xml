    <!-- ALLOWED TRANSITIONS -->
    <exit-transition transition_id="cancel" />
    <exit-transition transition_id="initialize" />
    <exit-transition transition_id="submit"/>
    <!-- /ALLOWED TRANSITIONS -->

    <!-- TRANSITION PERMISSIONS -->
    <permission-map name="senaite.core: Transition: Assign Analysis" acquired="True"/>
    <permission-map name="senaite.core: Transition: Reject" acquired="True"/>
    <permission-map name="senaite.core: Transition: Retest" acquired="True"/>
    <permission-map name="senaite.core: Transition: Retract" acquired="True"/>
    <permission-map name="senaite.core: Transition: Unassign Analysis" acquired="True"/>
    <permission-map name="senaite.core: Transition: Verify" acquired="True"/>
    <!-- /TRANSITION PERMISSIONS -->

