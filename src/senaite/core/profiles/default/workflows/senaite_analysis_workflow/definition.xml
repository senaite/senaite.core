  <state state_id="retracted" title="Retracted" i18n:attributes="title">

    <!-- ALLOWED TRANSITIONS -->
    <exit-transition transition_id="unassign" />
    <!-- /ALLOWED TRANSITIONS -->

    <!-- TRANSITION PERMISSIONS -->
    <permission-map name="senaite.core: Transition: Assign Analysis" acquired="True"/>
