    <permissions-map name="senaite.core: Field: View Analysis Uncertainty" acquired="True"/>
    <permissions-map name="senaite.core: Field: View Analysis Calculation" acquired="True"/>
    <permissions-map name="senaite.core: Field: View Analysis Results Range" acquired="True"/>
    <!-- /FIELD PERMISSIONS -->

  </state>

  <!-- State: TO_BE_VERIFIED
  Results have been submitted and awaiting for review -->
  <state state_id="to_be_verified" title="To be verified" i18n:attributes="title">

    <!-- ALLOWED TRANSITIONS -->
    <exit-transition transition_id="multi_verify" />
    <exit-transition transition_id="verify" />
    <exit-transition transition_id="retest" />
    <exit-transition transition_id="retract" />
    <exit-transition transition_id="reject" />
    <!-- /ALLOWED TRANSITIONS -->

    <!-- TRANSITION PERMISSIONS -->
    <permission-map name="senaite.core: Transition: Assign Analysis" acquired="True"/>
    <permission-map name="senaite.core: Transition: Reject" acquired="True"/>
