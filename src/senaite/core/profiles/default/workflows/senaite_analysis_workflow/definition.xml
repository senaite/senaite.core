  <state state_id="assigned" title="Assigned" i18n:attributes="title">

    <!-- ALLOWED TRANSITIONS -->
    <exit-transition transition_id="unassign" />
    <exit-transition transition_id="submit"/>
    <exit-transition transition_id="reject" />
    <!-- /ALLOWED TRANSITIONS -->

