    <permissions-map name="senaite.core: Field: View Analysis Result Capture Date" acquired="True"/>
    <permissions-map name="senaite.core: Field: View Analysis Uncertainty" acquired="True"/>
    <permissions-map name="senaite.core: Field: View Analysis Calculation" acquired="True"/>
    <permissions-map name="senaite.core: Field: View Analysis Results Range" acquired="True"/>
    <!-- /FIELD PERMISSIONS -->

