<div class="field" tal:attributes="style view/style|nothing" i18n:domain="bika">

    <label i18n:translate="">Sample type</label>
    <br/>

    <select name="SampleTypeUID:ignore_empty"
            size="7"
            id="SampleTypeUID"
            tal:attributes="
            size python:view.multiselect and '7' or '1';
            style string:font-family:${here/base_properties/fontFamily};;font-size:100%;
            multiple view/multiselect">

        <option tal:condition="python:view.allow_blank and not view.multiselect"
                value=""/>

        <tal:sampletypes tal:repeat="sampletype view/sampletypes">

            <option value=""
                    tal:define="sampletype_uid python:sampletype.UID"
                    tal:attributes="
                            value sampletype_uid;
                            selected python:request.get('SampleTypeUID', '') == sampletype_uid and 'selected' or ''"
                    tal:content="sampletype/Title">
            </option>

        </tal:sampletypes>

    </select>

</div>
