<div class="field" tal:attributes="style view/style|nothing"
        tal:condition="not:here/member_is_client" i18n:domain="bika">

    <label i18n:translate="">Client</label>
    <br/>

    <select name="ClientUID:ignore_empty"
            size="7"
            id="ClientUID"
            tal:attributes="
            size python:view.multiselect and '7' or '1';
            style string:font-family:${here/base_properties/fontFamily};;font-size:100%;
            multiple view/multiselect">
        <option tal:condition="python:view.allow_blank and not view.multiselect"
            value=""/>

        <tal:clients tal:repeat="client view/clients">

            <option
                    tal:attributes="
                            value client/UID;
                            selected python:request.get('ClientUID', '') == client.UID and 'selected' or ''"
                    tal:content="client/Title">
            </option>

        </tal:clients>

    </select>

</div>
