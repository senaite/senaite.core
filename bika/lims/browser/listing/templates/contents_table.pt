<tal:contents_table
  define="portal context/@@plone_portal_state/portal;">

  <tal:css>
    <!-- Colors usef from https://mdbootstrap.com/css/colors -->
    <style type="text/css">
     tr.state-sample_due { border-left: solid #ffff8d; border-width: 0.5em; }
     tr.state-sample_received { border-left: solid #b9f6ca; border-width: 0.5em; }
     tr.state-to_be_verified { border-left: solid #84ffff; border-width: 0.5em; }
     tr.state-verified { border-left: solid #80d8ff; border-width: 0.5em; }
     tr.state-published { border-left: solid #00c853; border-width: 0.5em; }
     tr.state-retracted { border-left: solid #ff8a80; border-width: 0.5em; }
     tr.state-invalid { border-left: solid #b71c1c; border-width: 0.5em; }
     tr.state-open { border-left: solid #ab47bc; border-width: 0.5em; }
     tr.state-attachment_due { border-left: solid #ffc107; border-width: 0.5em; }
     tr.state-unassigned { border-left: solid #4a148c; border-width: 0.5em; }
     tr.state-empty-worksheet { border-left: solid #f8bbd0; border-width: 0.5em; }
     tr.state-cancelled { border-left: solid #000000; border-width: 0.5em; }
     tr.state-inactive { border-left: solid #607d8b; border-width: 0.5em; }

     th.sortable { cursor: pointer; }
     th.active.ascending span:after { content: "▲"; margin-left: 0.5em; }
     th.active.descending span:after { content: "▼"; margin-left: 0.5em;}
     th:first-child { border-left: solid transparent; border-width: 0.5em; }
    </style>
  </tal:css>

  <tal:js
    define="portal_url portal/absolute_url;
            static_url string:${portal_url}/++resource++senaite.core.browser.listing.static;">
    <script type="text/javascript"
            src="senaite.core.listing.js"
            tal:attributes="src string:${static_url}/js/senaite.core.listing.js"></script>
  </tal:js>

  <!-- ReactJS managed component -->
  <div id="ajax-contents-table-wrapper"
       tal:attributes="data-form_id python:view.form_id;
                       data-pagesize python:view.pagesize;
                       data-columns python:view.ajax_columns();
                       data-review_states python:view.ajax_review_states();">
  </div>

</tal:contents_table>
