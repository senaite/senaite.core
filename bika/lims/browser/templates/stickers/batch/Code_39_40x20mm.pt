<tal:sticker define="item view/current_item;
                     batch_id  item/getId;">

  <!-- Barcode -->
  <div class="barcode"
       tal:attributes="data-id batch_id;"
       data-code="code39"
       data-barHeight="14"
       data-addQuietZone="true"
       data-showHRI="false">
  </div>

  <!-- Some additional info about the batch -->
  <div class="batch-info">
    <table cellpadding="0" cellspacing="0" border="0">
      <tr>
        <td colspan="2">
          <strong tal:content="batch_id">Batch ID</strong>
        </td>
      </tr>
    </table>
  </div>

</tal:sticker>
