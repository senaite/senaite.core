<!--
    Template used to render one barcode with dimensions of 40x20mm.

    To retrieve the item, use view.current_item.
-->
<tal:sticker define="item python:view.current_item;
                     analyst item/getAnalyst;
                     worksheet_id item/getId;">

  <!-- Barcode -->
  <div class="barcode"
       tal:attributes="data-id worksheet_id;"
       data-code="code93"
       data-barHeight="14"
       data-addQuietZone="true"
       data-showHRI="false">
  </div>

  <!-- Some additional info about the worksheet -->
  <div class="worksheet-info">
    <table cellpadding="0" cellspacing="0" border="0">
      <tr>
        <td tal:content="analyst"/>
      </tr>
    </table>
  </div>

</tal:sticker>
