<tal:sticker define="item python:view.current_item;
                     worksheet_id item/getId;">

  <div class="worksheet-info">

    <!-- Barcode -->
    <div class="barcode"
         tal:attributes="data-id worksheet_id;"
         data-code="code93"
         data-barHeight="14"
         data-addQuietZone="true"
         data-showHRI="false">
    </div>

    <!-- Some additional info about the worksheet -->
    <strong tal:content="worksheet_id"></strong>

  </div>

</tal:sticker>
