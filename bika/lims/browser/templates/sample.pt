<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	metal:use-macro="here/main_template/macros/master"
	i18n:domain="bika">

<body>

<metal:title fill-slot="content-title">
	<h1>
        <img tal:condition="view/icon | nothing"
            src="" tal:attributes="src view/icon"/>
        <span tal:content="here/title_or_id"/>
    </h1>
</metal:title>

<metal:content fill-slot="content-core" tal:define="
	review_state python:context.portal_workflow.getInfoFor(here, 'review_state', '');
	portal context/@@plone_portal_state/portal;
	checkPermission nocall:context/portal_membership/checkPermission;
	specification python:request.get('specification', view.getDefaultSpec());
	mtool here/portal_membership;">

	<span tal:condition="view/header_table"
	      tal:replace="structure view/header_table">
	</span>

	<h3 tal:condition="view/parts"
	    style="margin-top:1em;">
		<img
			i18n:attributes="title"
			title="Partitions"
			tal:attributes="src string:${portal/absolute_url}/++resource++bika.lims.images/samplepartition.png"/>
		<span i18n:translate="">Sample Partitions</span>
	</h3>
	<tal:parts tal:condition="view/parts"
	            replace="structure view/parts"/>

    <h3 tal:condition="view/tables"
	    style="margin-top:2em;">
        <tal:range>
            <form name="specificationForm"
                enctype="multipart/form-data"
                method="post">
            <img
				title="range"
				i18n:attributes="title"
                tal:attributes="src string:${portal/absolute_url}/++resource++bika.lims.images/analysisspec.png"/>
            <span i18n:translate="">Range Specification</span>
            <a class="specification" id="lab" value="lab"
                href=""
				i18n:translate=""
                tal:attributes="
                    href python:context.absolute_url();
                    class python:specification == 'lab' and 'specification selected' or 'specification'">Lab</a>
            <a class="specification" id="client" value="client"
                href=""
				i18n:translate=""
                tal:attributes="
                    href python:context.absolute_url();
                    class python:specification == 'client' and 'specification selected' or 'specification'">Client</a>
            </form>
        </tal:range>
    </h3>

    <tal:tables tal:condition="view/tables"
	            tal:repeat="table python:view.tables.items()">
		<h3 style="margin-top:2em;">
			<img
				i18n:attributes="title"
				title="Analyses"
				tal:attributes="src string:${portal/absolute_url}/++resource++bika.lims.images/analysisservice.png"/>
			<span tal:content="python: table[0]"/>
		</h3>
        <span tal:replace="structure python: table[1]"/>
    </tal:tables>

    <tal:remarks define="
        field python:context.Schema()['Remarks'];
        errors python:{};">
        <p style="margin-top:2em;"/>
         <metal:widget use-macro="python:context.widget('Remarks', mode='edit')" />
    </tal:remarks>

</metal:content>
</body>
</html>

